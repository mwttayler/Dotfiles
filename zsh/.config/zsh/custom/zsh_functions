## Store result of a given command within a temp file and open generated file
open_as_html() {
    echo "Creating temp file..."
    temp_dir=$(mktemp -d)
    echo "Temp file = $temp_dir"
    
    destination=$temp_dir/temp.html
    echo "Destination file = $destination"

    "$@" > $destination

    echo "Opening file..."
    open $destination
}

